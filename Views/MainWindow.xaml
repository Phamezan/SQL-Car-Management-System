<Window x:Class="Første_SQL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="500"
        Width="900"
        Background="#303030"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="350" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <Label Content="Liste af Biler"
               FontSize="20"
               Foreground="White"
               Grid.Row="0"
               HorizontalAlignment="Left"
               Margin="303,19,0,0"
               VerticalAlignment="Top"
               Height="36"
               Width="140"
               Grid.RowSpan="2" />

        <ListView ItemsSource="{Binding Cars, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedCar}"
                  Height="340"
                  Margin="5"
                  Grid.Row="1"
                  Grid.Column="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Make"
                                    DisplayMemberBinding="{Binding Make}"
                                    Width="100" />
                    <GridViewColumn Header="Model"
                                    DisplayMemberBinding="{Binding Model}"
                                    Width="100" />
                    <GridViewColumn Header="Year"
                                    DisplayMemberBinding="{Binding Year}"
                                    Width="60" />
                    <GridViewColumn Header="Description"
                                    DisplayMemberBinding="{Binding Description}"
                                    Width="150" />
                </GridView>
            </ListView.View>
        </ListView>


        <TextBox HorizontalAlignment="Left"
                 Grid.Row="1"
                 Grid.Column="1"
                 FontSize="16"
                 Padding="4"
                 TextWrapping="Wrap"
                 Text="{Binding SelectedCar.Make, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top"
                 Width="213"
                 Height="37"
                 Margin="208,12,0,0" />

        <TextBox HorizontalAlignment="Left"
                 Grid.Row="1"
                 Grid.Column="1"
                 FontSize="16"
                 Padding="4"
                 TextWrapping="Wrap"
                 Text="{Binding SelectedCar.Model, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top"
                 Width="213"
                 Height="37"
                 Margin="208,68,0,0" />

        <TextBox HorizontalAlignment="Left"
                 Margin="208,125,0,0"
                 TextWrapping="Wrap"
                 FontSize="16"
                 Padding="4"
                 Text="{Binding SelectedCar.Year, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top"
                 Width="213"
                 Height="37"
                 Grid.Column="1"
                 Grid.Row="1" />

        <TextBox HorizontalAlignment="Left"
                 Margin="208,187,0,0"
                 TextWrapping="Wrap"
                 FontSize="12"
                 Text="{Binding SelectedCar.Description, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top"
                 Width="213"
                 Height="102"
                 Grid.Column="1"
                 Grid.Row="1" />

        <Label Content="Mærke"
               FontSize="20"
               Foreground="White"
               HorizontalAlignment="Left"
               Grid.Column="1"
               Grid.Row="1"
               VerticalAlignment="Top"
               Height="36"
               Width="77"
               Margin="55,15,0,0" />

        <Label Content="Model"
               FontSize="20"
               Foreground="White"
               HorizontalAlignment="Left"
               Grid.Row="1"
               Grid.Column="1"
               VerticalAlignment="Top"
               Height="36"
               Width="78"
               RenderTransformOrigin="0.578,1.813"
               Margin="54,76,0,0" />

        <Label Content="År"
               FontSize="20"
               Foreground="White"
               HorizontalAlignment="Left"
               Margin="67,137,0,0"
               VerticalAlignment="Top"
               Height="36"
               Width="52"
               Grid.Column="1"
               Grid.Row="1" />

        <Label Content="Beskrivelse"
               FontSize="20"
               Foreground="White"
               HorizontalAlignment="Left"
               Margin="38,202,0,0"
               VerticalAlignment="Top"
               Height="36"
               Width="110"
               Grid.Column="1"
               Grid.Row="1" />

        <Button Content="Slet Bil"
                FontSize="24"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="36"
                Grid.Row="2"
                Width="96"
                Command="{Binding DeleteCarCmd}"
                Margin="5,4,0,0" />

        <Button Content="Tilføj Bil"
                FontSize="20"
                HorizontalAlignment="Left"
                Margin="314,4,0,0"
                VerticalAlignment="Top"
                Height="41"
                Width="100"
                Command="{Binding AddCarCmd}"
                Grid.Column="1"
                Grid.Row="2" />

        <Button Content="Opdatere"
                FontSize="22"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Height="40"
                Grid.Row="2"
                Width="96"
                Command="{Binding UpdateCarCmd}"
                Margin="0,5,0,0"
                Grid.Column="1" />

        <Button Grid.Column="1"
                Content="Brugere"
                Command="{Binding ManageUserWindowCmd}"
                FontSize="16"
                HorizontalAlignment="Left"
                Margin="26,5,0,0"
                Grid.Row="2"
                VerticalAlignment="Top"
                Height="38"
                Width="65"
                RenderTransformOrigin="0.905,0.462" />

        <TextBox HorizontalAlignment="Left"
                 Margin="248,8,0,0"
                 Grid.Row="2"
                 TextWrapping="Wrap"
                 Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"
                 Padding="3"
                 VerticalAlignment="Top"
                 Width="195"
                 Height="30" />

        <Label Content="Søg"
               Foreground="White"
               FontSize="16"
               HorizontalAlignment="Center"
               Margin="0,6,0,0"
               Grid.Row="2"
               VerticalAlignment="Top"
               RenderTransformOrigin="0.978,0.463" />

        <Button HorizontalAlignment="Left"
                Margin="5,0,0,0"
                Height="34"
                Command="{Binding LogOutCmd}"
                Width="39"
                VerticalAlignment="Center">
            <Image Source="\Views\Images\logout.png" Width="20" Height="30"/>
        </Button>

    </Grid>
</Window>
