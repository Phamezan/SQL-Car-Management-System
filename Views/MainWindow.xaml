<Window x:Class="Første_SQL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        Background="#303030">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="300" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>

        <Label Content="Liste af Biler"
               FontSize="20"
               Foreground="White"
               Grid.Row="0"
               HorizontalAlignment="Left"
               Margin="10,18,0,0"
               VerticalAlignment="Top"
               Height="36"
               Width="140" />

        <ListBox ItemsSource="{Binding Cars, UpdateSourceTrigger=PropertyChanged}"
                 SelectedItem="{Binding SelectedCar}"
                 Height="300"
                 Margin="5"
                 Grid.Row="1"
                 Grid.Column="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Make}" />
                        <TextBlock Text="{Binding Model}" />
                        <TextBlock Text="{Binding Year}" />
                        <TextBlock Text="{Binding Description}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBox HorizontalAlignment="Left"
                 Grid.Row="1"
                 Grid.Column="1"
                 FontSize="16"
                 Padding="4"
                 TextWrapping="Wrap"
                 Text="{Binding SelectedCar.Car.Make, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top"
                 Width="213"
                 Height="37"
                 Margin="149,5,0,0" />

        <TextBox HorizontalAlignment="Left"
                 Grid.Row="1"
                 Grid.Column="1"
                 FontSize="16"
                 Padding="4"
                 TextWrapping="Wrap"
                 Text="{Binding SelectedCar.Car.Model, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top"
                 Width="213"
                 Height="37"
                 Margin="149,61,0,0" />

        <TextBox HorizontalAlignment="Left"
                 Margin="149,118,0,0"
                 TextWrapping="Wrap"
                 FontSize="16"
                 Padding="4"
                 Text="{Binding SelectedCar.Car.Year, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top"
                 Width="213"
                 Height="37"
                 Grid.Column="1"
                 Grid.Row="1" />

        <TextBox HorizontalAlignment="Left"
                 Margin="149,180,0,0"
                 TextWrapping="Wrap"
                 FontSize="12"
                 Text="{Binding SelectedCar.Car.Description, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top"
                 Width="213"
                 Height="102"
                 Grid.Column="1"
                 Grid.Row="1" />

        <Label Content="Mærke"
               FontSize="20"
               Foreground="White"
               HorizontalAlignment="Left"
               Grid.Column="1"
               Grid.Row="1"
               VerticalAlignment="Top"
               Height="36"
               Width="77"
               Margin="27,0,0,0" />

        <Label Content="Model"
               FontSize="20"
               Foreground="White"
               HorizontalAlignment="Left"
               Grid.Row="1"
               Grid.Column="1"
               VerticalAlignment="Top"
               Height="36"
               Width="78"
               RenderTransformOrigin="0.578,1.813"
               Margin="26,61,0,0" />

        <Label Content="År"
               FontSize="20"
               Foreground="White"
               HorizontalAlignment="Left"
               Margin="39,122,0,0"
               VerticalAlignment="Top"
               Height="36"
               Width="52"
               Grid.Column="1"
               Grid.Row="1" />

        <Label Content="Beskrivelse"
               FontSize="20"
               Foreground="White"
               HorizontalAlignment="Left"
               Margin="10,187,0,0"
               VerticalAlignment="Top"
               Height="36"
               Width="110"
               Grid.Column="1"
               Grid.Row="1" />

        <Button Content="Slet Bil"
                FontSize="24"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="36"
                Grid.Row="2"
                Width="96"
                Command="{Binding DeleteCarCmd}"
                Margin="10,10,0,0" />

        <Button Content="Tilføj Bil"
                FontSize="20"
                HorizontalAlignment="Left"
                Margin="263,5,0,0"
                VerticalAlignment="Top"
                Height="41"
                Width="99"
                Command="{Binding AddCarCmd}"
                Grid.Column="1"
                Grid.Row="2" />
        
        <Button Content="Opdatere"
                FontSize="22"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="36"
                Grid.Row="2"
                Width="96"
                Command="{Binding UpdateCarCmd}"
                Margin="294,10,0,0" />

    </Grid>
</Window>
