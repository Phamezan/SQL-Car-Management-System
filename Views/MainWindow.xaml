<Window
    x:Class="Første_SQL.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Første_SQL.ViewModels"
    Title="MainWindow"
    Width="920"
    Height="500"
    Background="#303030"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="471" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="350" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Width="140"
            Height="36"
            Margin="50,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Liste af Biler"
            FontSize="20"
            Foreground="White" />

        <ScrollViewer Grid.Row="1" Margin="0,0,0,0">
            <ItemsControl ItemsSource="{Binding Cars}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,5,5,0"
                            BorderBrush="Black"
                            BorderThickness="1">
                            <Button
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Top"
                                Background="Transparent"
                                Command="{Binding DataContext.SelectedCarCmd, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Margin="0,5,0,0"
                                        FontSize="20"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        Text="{Binding Make}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Margin="0,5,0,0"
                                        FontSize="16"
                                        Foreground="White"
                                        Text="{Binding Model}" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Margin="0,5,0,0"
                                        FontSize="16"
                                        Foreground="White"
                                        Text="{Binding Year}" />
                                    <TextBlock
                                        Grid.Row="3"
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="White"
                                        TextWrapping="Wrap"
                                        Text="{Binding Description}" />
                                </Grid>
                            </Button>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel ItemWidth="220" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!--<ListView ItemsSource="{Binding Cars, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedCar}"
                  Height="340"
                  Margin="5"
                  Grid.Row="1"
                  Grid.Column="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Make"
                                    DisplayMemberBinding="{Binding Make}"
                                    Width="100" />
                    <GridViewColumn Header="Model"
                                    DisplayMemberBinding="{Binding Model}"
                                    Width="100" />
                    <GridViewColumn Header="Year"
                                    DisplayMemberBinding="{Binding Year}"
                                    Width="60" />
                    <GridViewColumn Header="Description"
                                    DisplayMemberBinding="{Binding Description}"
                                    Width="150" />
                </GridView>
            </ListView.View>
        </ListView>-->


        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="213"
            Height="37"
            Margin="208,12,0,0"
            Padding="4"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="18"
            Text="{Binding SelectedCar.Make, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />

        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="213"
            Height="37"
            Margin="208,68,0,0"
            Padding="4"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="18"
            Text="{Binding SelectedCar.Model, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />

        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="213"
            Height="37"
            Margin="208,125,0,0"
            Padding="4"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="18"
            Text="{Binding SelectedCar.Year, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />

        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="213"
            Height="102"
            Margin="208,187,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="14"
            Text="{Binding SelectedCar.Description, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />

        <Label
            Grid.Row="1"
            Grid.Column="1"
            Width="77"
            Height="36"
            Margin="55,15,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Mærke"
            FontSize="20"
            Foreground="White" />

        <Label
            Grid.Row="1"
            Grid.Column="1"
            Width="78"
            Height="36"
            Margin="54,76,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Model"
            FontSize="20"
            Foreground="White"
            RenderTransformOrigin="0.578,1.813" />

        <Label
            Grid.Row="1"
            Grid.Column="1"
            Width="52"
            Height="36"
            Margin="67,137,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="År"
            FontSize="20"
            Foreground="White" />

        <Label
            Grid.Row="1"
            Grid.Column="1"
            Width="110"
            Height="36"
            Margin="38,202,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Beskrivelse"
            FontSize="20"
            Foreground="White" />

        <Button
            Grid.Row="2"
            Margin="5,4,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding DeleteCarCmd}"
            Content="Slet Bil"
            Style="{StaticResource Buttonstyle1}" Height="36" Width="96" />

        <Button
            Grid.Row="2"
            Grid.Column="1"
            Margin="314,4,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding AddCarCmd}"
            Content="Tilføj Bil"
            Style="{StaticResource Buttonstyle1}" Height="36" Width="96" />

        <Button
            Grid.Row="2"
            Grid.Column="1"
            Width="106"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Command="{Binding UpdateCarCmd}"
            Content="Opdatere"
            Style="{StaticResource Buttonstyle1}" Height="36" />

        <Button
            Grid.Row="2"
            Grid.Column="1"
            Margin="26,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ManageUserWindowCmd}"
            Content="Brugere"
            RenderTransformOrigin="0.905,0.462"
            Style="{StaticResource Buttonstyle1}" Height="36" Width="96" />

        <TextBox
            Grid.Row="2"
            Width="195"
            Height="30"
            Margin="248,8,0,0"
            Padding="3"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="16"
            Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />

        <Label
            Grid.Row="2"
            Margin="0,6,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Søg"
            FontSize="16"
            Foreground="White"
            RenderTransformOrigin="0.978,0.463" Height="31" Width="38" />

        <Button
            Width="39"
            Height="34"
            Margin="5,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Command="{Binding LogOutCmd}">
            <Image
                Width="20"
                Height="30"
                Source="\Views\Images\logout.png" />
        </Button>

    </Grid>
</Window>
