<Window x:Class="Første_SQL.Views.ManageUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Første_SQL.Views"
        mc:Ignorable="d"
        Title="ManageUserWindow" Foreground="White"
        Height="450"
        Width="800"
        Background="#303030"
        WindowStartupLocation="CenterScreen">
    
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="300" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        
        
        
        
        <ListView ItemsSource="{Binding Users, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedUser}"
                  Height="300"
                  Margin="5"
                  Grid.Row="1"
                  Grid.Column="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Username"
                                    DisplayMemberBinding="{Binding Username}"
                                    Width="180" />
                    <GridViewColumn Header="Password"
                                    DisplayMemberBinding="{Binding Password}"
                                    Width="150" />
                    <GridViewColumn Header="IsAdmin"
                                    DisplayMemberBinding="{Binding IsAdmin}"
                                    Width="50" />
                </GridView>
            </ListView.View>
        </ListView>

        <Label Content="Liste af brugere"
               FontSize="24"
               Foreground="White"
               HorizontalAlignment="Left"
               Margin="5,13,0,0"
               VerticalAlignment="Top"
               Grid.RowSpan="2" />
        <Button Grid.Column="1"
                Content="Button"
                HorizontalAlignment="Left"
                Margin="476,187,0,0"
                Grid.Row="1"
                VerticalAlignment="Top"
                Width="0" />
        <TextBox HorizontalAlignment="Left"
                 Grid.Row="1"
                 Grid.Column="1"
                 FontSize="16"
                 Padding="4"
                 TextWrapping="Wrap"
                 Text="{Binding SelectedUser.Username, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top"
                 Width="213"
                 Height="37"
                 Margin="149,5,0,0" />
        <TextBox HorizontalAlignment="Left"
                 Grid.Row="1"
                 Grid.Column="1"
                 FontSize="16"
                 Padding="4"
                 TextWrapping="Wrap"
                 Text="{Binding SelectedUser.Password, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top"
                 Width="213"
                 Height="37"
                 Margin="149,61,0,0" />
        
        <Label Content="Brugernavn"
               FontSize="20"
               Foreground="White"
               HorizontalAlignment="Left"
               Grid.Column="1"
               Grid.Row="1"
               VerticalAlignment="Top"
               Height="36"
               Width="117"
               Margin="10,6,0,0" />

        <Label Content="Adgangskode"
               FontSize="20"
               Foreground="White"
               HorizontalAlignment="Left"
               Grid.Row="1"
               Grid.Column="1"
               VerticalAlignment="Top"
               Height="37"
               Width="135"
               RenderTransformOrigin="0.578,1.813"
               Margin="9,61,0,0" />
        
        <Label Content="Administrator?"
               FontSize="20"
               Foreground="White"
               HorizontalAlignment="Left"
               Margin="10,114,0,0"
               VerticalAlignment="Top"
               Height="36"
               Width="145"
               Grid.Column="1"
               Grid.Row="1" />
        
        <CheckBox Grid.Column="1"
                  IsChecked="{Binding SelectedUser.IsAdmin}"
                  HorizontalAlignment="Left"
                  Margin="350,130,0,0"
                  Grid.Row="1"
                  VerticalAlignment="Top"
                  Height="16"
                  Width="15"
                  RenderTransformOrigin="1.195,0.423">
            <CheckBox.RenderTransform>
                <ScaleTransform ScaleX="2"
                                ScaleY="2" />
            </CheckBox.RenderTransform>
        </CheckBox>
        <Button Content="Slet Bruger"
                FontSize="24"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="36"
                Grid.Row="2"
                Width="125"
                Command="{Binding DeleteUserCmd}"
                Margin="5,10,0,0" />

        <Button Content="Tilføj bruger"
                FontSize="20"
                HorizontalAlignment="Left"
                Margin="235,244,0,0"
                VerticalAlignment="Top"
                Height="41"
                Width="127"
                Command="{Binding AddUserCmd}"
                Grid.Column="1"
                Grid.Row="1" />

        <Button Content="Opdatere"
                FontSize="22"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="41"
                Grid.Row="1"
                Width="96"
                Command="{Binding UpdateUserCmd}"
                Margin="92,244,0,0"
                Grid.Column="1"
                RenderTransformOrigin="0.563,-1.059" />

    </Grid>
</Window>
